---
const { id, nombre, precio, imagen } = Astro.props;
---

<section class="producto" data-id={id}>
  <h2>{nombre}</h2>
  <img src={imagen.src} width="200" />
  <p>${precio}</p>

  <button class="btn-agregar">Agregar al carrito</button>
</section>




<style>
  .producto {
  border: 1px solid #ddd;
  border-radius: 10px;
  padding: 15px;
  width: 220px;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 10px;
  background: white;
}

.producto img {
  max-width: 100%;
  border-radius: 8px;
}

.producto h2 {
  font-size: 16px;
  text-align: center;
}

.producto p {
  font-weight: bold;
}

.btn-agregar {
  padding: 8px 12px;
  border: none;
  background: #25d366;
  color: white;
  border-radius: 6px;
  cursor: pointer;
}

.btn-agregar:hover {
  background: #1ebe5d;
}

</style>